<source>
  @type forward
</source>

<match docker.**>
  @type stdout
</match>

<match fluent.**>
  type record_modifier
  tag internal.message
</match>

<match internal.message>
  @type copy
  <store>
    @type bigquery_insert
    @id td-agent-log-bigquery

    auth_method json_key
    json_key /fluentd/private_keys/<%= @json_key_filename %>
    project <%= @project_id %>
    dataset <%= @dataset %>
    location <%= @location %>
    table <%= @table %>
    schema_path /fluentd/schema/fluentd_aggregator-td_agent_log.json
    buffer_chunk_records_limit 300

    <buffer>
      flush_interval 60s
      flush_thread_interval 0.01
      flush_thread_burst_interval 0.05
      chunk_limit_size 128m
      flush_thread_count 10
    </buffer>
  </store>
</match>
